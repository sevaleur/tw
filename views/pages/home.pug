extends ../base.pug

block variables
  - var template = 'home'

block content
  .home
    .home__title 
      h1.home__title__text 
        span.home__title__text__left=home.titleLeft
        span.home__title__text__split
        span.home__title__text__right=home.titleRight
    .home__profession
      .home__profession__one
        .home__profession__one__text=home.profession1
      .home__profession__split
      .home__profession__two
        .home__profession__two__text=home.profession2

    .home__showcase
      .home__showcase__wrapper 
        each element in home.showcase 
          .home__showcase__element 
             a.home__gallery__image__link(href=Link=(`${element._type}/${element.slug}`) aria-label=element.title)
              .home__showcase__element__media 
                figure.home__showcase__element__media__figure 
                  img.home__showcase__element__media__figure__image(data-src=Build.image(element.image.asset._ref).url() alt=element.image.alt)